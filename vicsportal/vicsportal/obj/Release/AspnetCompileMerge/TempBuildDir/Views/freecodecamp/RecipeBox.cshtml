
@{
    Layout = null;
}

<html>
<head>
    <style>
        .modal {
            display: block;
            position: fixed; /* Stay in place */
            z-index: 1; /* Sit on top */
            padding-top: 100px; /* Location of the box */
            left: 0;
            top: 0;
            width: 100%; /* Full width */
            height: 100%; /* Full height */
            overflow: auto; /* Enable scroll if needed */
            background-color: rgb(0,0,0); /* Fallback color */
            background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
        }

        .modalcontainer {
            background-color: white;
            margin: 5% 10% 5% 10%;
        }
        .githubsourcecode {
            border: 5px solid black;
            padding-right: 10px;
            padding-left: 10px;
            text-decoration: none;
            background-color: #99ccff;
            border-radius: 20px;
            color: #fff;
            font-size: 25px;
            margin: 15vw;
            opacity: 0.8
        }

        .githubsourcecode:hover {
            color: #fff;
            opacity: 1;
            text-decoration: none;
            box-shadow: 5px 10px #888888
        }

    </style>
</head>
<body>
    <a class="githubsourcecode" href="https://github.com/rdelosh/vicsportal/tree/master/vicsportal/vicsportal/Scripts/RecipeBox">Github Source Code</a>
    <div class="myapp"></div>
    <script src="../../Scripts/RecipeBox/wwwroot/js/bundle.js"></script>
</body>
</html>